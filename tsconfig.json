{
  "compilerOptions": {
    "target": "es2018",
    "moduleResolution": "node",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",

    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/types": ["./src/types"],
      "@/helpers": ["./src/helpers"],
      "@/actions": ["./src/actions"],
      "@/constants": ["./src/constants"]
    },
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": false
  },
  "include": ["globals.d.ts", "src/**/*.ts", "src/test.js"],
  "files": ["globals.d.ts"],
  "exclude": ["node_modules", "dist", "lib"]
}
